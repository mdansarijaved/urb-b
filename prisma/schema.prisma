generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserReconcilliationType {
  USERNAME
  EMAIL
  PHONE
  GOOGLE
  INSTAGRAM
  GITHUB
  APPLE
  FACEBOOK
  MICROSOFT
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  links         Link[]

  @@unique([email])
  @@map("user")
}

